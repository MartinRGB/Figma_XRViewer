{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module":"esnext",
    "allowSyntheticDefaultImports":true,
    "baseUrl": "./",
    "paths":{
      "*.ts":["*"],
      "@Applications/*": ["src/app/applications/*"],
      "@Components/*": ["src/app/components/*"],
      "@Assets/*": ["src/app/assets/*"],
      "@Styles/*": ["src/app/styles/*"],
      "@Utils/*": ["src/app/utils/*"],
      "@Plugins/*": ["src/plugin/*"],
      "@CustomTypes": ["src/app/types"],
      "@Config": ["src/config"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  }
}
